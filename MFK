<div id="results"></div>

<script>
function capitalizeWords(str) {
  return str.replace(/\b\w/g, char => char.toUpperCase());
}

function showResults() {
  const form = document.getElementById('mkfForm');
  const formData = new FormData(form);

  // Initialize results
  let results = {
    'Marry': [],
    'Kill': [],
    'Fuck': []
  };

  // Track assignments per group to ensure one choice per category
  let groupAssignments = {};

  for (let [key, value] of formData.entries()) {
    // key format: groupX_person_name (e.g., group1_janet_jackson)
    let parts = key.split('_');
    let group = parts[0]; // e.g., group1
    let person = parts.slice(1).join(' '); // e.g., janet jackson

    // Initialize group in assignments if not present
    if (!groupAssignments[group]) {
      groupAssignments[group] = {};
    }

    // Check if the category for this group is already filled
    if (groupAssignments[group][value]) {
      alert(`You have already chosen someone to ${value} in ${capitalizeWords(group)}. Please select a different option.`);
      return;
    }

    groupAssignments[group][value] = true;

    // Capitalize each word in the person's name
    let personName = capitalizeWords(person);

    results[value].push(personName);
  }

  // Check if all groups have all categories filled
  for (let i = 1; i <= 10; i++) {
    let group = `group${i}`;
    if (!groupAssignments[group] || !groupAssignments[group]['Marry'] || !groupAssignments[group]['Kill'] || !groupAssignments[group]['Fuck']) {
      alert(`Please assign Marry, Kill, and Fuck in Group ${i}.`);
      return;
    }
  }

  // Construct the output
  let output = '<h2>Your Results</h2>';

  for (let category in results) {
    output += `<p class="result-category">${category}:</p>`;
    if (results[category].length === 0) {
      output += `<p>No one</p>`;
    } else {
      output += `<ul>`;
      results[category].forEach(name => {
        output += `<li>${name}</li>`;
      });
      output += `</ul>`;
    }
  }

  // Display the results
  document.getElementById('results').innerHTML = output;
}
</script>

